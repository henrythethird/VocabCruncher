<table class="table table-striped table-bordered table-hover">
    {% for sentence in exampleSentences %}
        <tr style="cursor: pointer" onclick="window.location.href='{{ path('sentence_show', {'id': sentence.id }) }}'">
            <td>
                <span style="font-size: 150%">{{ sentence.mandarin }}</span>
            </td>
            <td>
                {{ sentence.english }}
            </td>
        </tr>
    {% endfor %}
</table>