{% extends 'base.html.twig' %}

{% block body %}
    <h1 class="text-center page-header">中文 Dictionary - {{ simple }}</h1>
    {% include 'general/search_bar.html.twig' with {formPath:'dictionary_index'}  %}
    <br>
    <h1><b>{{ simple }}</b></h1>
    <table class="table table-bordered">
        {% for word in words %}
            <tr>
                <td class="col-md-2">
                    <strong>[{{ word.pinyin }}]</strong>
                </td>
                <td>
                    {% for meaning in word.meanings %}
                    <div><b>{{ loop.index }}</b> {{ meaning.meaning }}</div>
                    {% endfor %}
                </td>
            </tr>
        {% endfor %}
    </table>

    <p>Example Sentences:</p>
    <table class="table table-striped table-bordered table-hover">
        <tr>
            <th>Mandarin</th>
            <th>English</th>
        </tr>
        {% for sentence in exampleSentences %}
            <tr style="cursor: pointer" onclick="window.location.href='{{ path('sentence_show', {'id': sentence.id }) }}'">
                <td>
                    <span style="font-size: 200%">{{ sentence.mandarin }}</span>
                </td>
                <td>
                    {{ sentence.english }}
                </td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}